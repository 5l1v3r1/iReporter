{
  "name": "iReporter-test-server",
  "version": "1.0.0",
  "description": "iReporter app",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel server/ -d ./build/ -s",
    "build": "npm run clean && npm run build-babel",
    "start": "npm run build && node ./build/index.js",
    "dev": "nodemon server/index.js --exec babel-node",
    "lint": "eslint ./ --fix",
    "test": "nyc mocha ./server/tests/* --compilers js:babel-core/register --exit",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "keywords": [
    "red-fag",
    "intervention",
    "Government intervention",
    "reporting"],
  "author": "Fortune King",
  "license": "ISC",
  "repository": "iReporter",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "babel-preset-env": "^1.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/node": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-cli": "^6.26.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "codeclimate-test-reporter": "^0.5.0",
    "cryptiles": "^4.1.2",
    "coveralls": "^3.0.2",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.6",
    "nyc": "^13.1.0"
  }
}
